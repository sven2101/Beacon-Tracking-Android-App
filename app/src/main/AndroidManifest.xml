<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.beacon4transparence" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission  android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="18" />
    <application
        android:name=".BeaconNotificationApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MonitoringActivity"
            android:label="@string/title_activity_monitoring"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RangingActivity"
            android:label="@string/title_activity_ranging" >
        </activity>
        <activity
            android:name=".BeaconShowActivity"
            android:label="@string/title_activity_beacon_show"
            android:parentActivityName=".MonitoringActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.beacon4transparence.MonitoringActivity" />
        </activity>

        <service
            android:name=".RangingService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
